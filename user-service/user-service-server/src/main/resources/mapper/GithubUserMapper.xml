<mapper namespace="com.gitgle.mapper.GithubUserMapper">


    <select id="searchByCondition" resultType="com.gitgle.service.resp.SearchResp">

        SELECT DISTINCT github_user.login, avatar, talent_rank from github_user
        LEFT JOIN user_domain on github_user.login=user_domain.login
        LEFT JOIN domain on domain.id = user_domain.domain_id
        <where>
            <if test="domain != null and domain != ''">
                AND domain_id = #{domain}
            </if>
            <if test="login != null and login != ''">
                AND github_user.login like concat('%', #{login}, '%')
            </if>
            <if test="nationId != null and nationId != ''">
                AND nation_id = #{nationId}
            </if>
        </where>


